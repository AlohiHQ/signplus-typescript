{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "baseUrl": "./",
    "declaration": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "lib": ["es2017", "dom"],
    "sourceMap": true
  },
  "include": ["src/"]
}
